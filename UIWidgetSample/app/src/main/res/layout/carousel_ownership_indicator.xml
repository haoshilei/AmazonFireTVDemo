<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ownership_container">

    <RelativeLayout
        android:id="@+id/banner_ownership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_underlay_gradient_small"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:gravity="right">

        <com.sample.amazon.asbuilibrary.view.FontableTextView
            android:id="@+id/banner_ownership_text"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:font="RobotoBold"
            style="@style/ownershipBanner.small" />
    </RelativeLayout>

</RelativeLayout>