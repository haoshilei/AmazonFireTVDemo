<?xml version="1.0" encoding="utf-8"?>
<com.sample.amazon.uiwidgetssample.SampleItemView
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/menu_option"
              android:layout_width="wrap_content"
              android:layout_height="match_parent" >

    <com.sample.amazon.asbuilibrary.view.CoverImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/poster_description"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView android:id="@+id/text"
              android:layout_width="@dimen/tombstone_width"
              android:layout_height="150dp"
              android:layout_alignBottom="@id/image"
              android:padding="5dp"
              android:textColor="@android:color/black"
              android:background="@drawable/carousel_item_bg" />

    <ProgressBar
        android:id="@android:id/progress"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="@dimen/tombstone_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateOnly="true"
        android:visibility="gone" />

    <com.sample.amazon.asbuilibrary.list.RollupView
        android:id="@id/carousel_nestedlist_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone" />

</com.sample.amazon.uiwidgetssample.SampleItemView>
