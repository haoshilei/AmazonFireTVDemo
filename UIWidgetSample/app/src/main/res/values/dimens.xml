    <!-- Standard UX dimensions used -->
    <!-- app:anno annotations are used to line up dimens with the
         ui specs and are the quoted dimensions in pixels
         The formula for converting from px=>dp is:

         160*px/dpi where dpi for a 720p display is 213
         -->
    <!-- leading dimensions used to vertically create space between text
    		Note these dimensions are 4dp less than quoted to account
    		for ux measuring from font baseline and android measuring
    		from bottom descent of a font.
    -->
    <dimen name="ux_leading_Small" app:anno="10px">4.0dp</dimen>
    <dimen name="ux_leading_Medium" app:anno="14px">7.0dp</dimen>
    <dimen name="ux_leading_Large" app:anno="20px">11.0dp</dimen>
    <dimen name="ux_leading_XLarge" app:anno="25px">15.0dp</dimen>

